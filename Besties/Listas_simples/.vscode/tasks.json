{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar C++",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${workspaceFolder}/*.cpp", // Cambia esto si usas subcarpetas
                "-o",
                "${workspaceFolder}/build/Debug/outDebug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compila los archivos C++ del proyecto."
        }
		
    ]
}
