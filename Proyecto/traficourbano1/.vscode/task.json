{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "g++.exe build active file (minGw)",
			"command": "C:/MinGW/bin/g++.exe",
			"args": [
				"-std=c++11",
				"-Wall",
				"-Werror",
				"-g",
				"${file}",
				"-o",
				"${workspaceFolder}/${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "C:/MinGW/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		}
	]
}