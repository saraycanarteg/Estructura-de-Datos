{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe build active file",
			"command": "C:/MinGW/bin/g++.exe",
			"args": [
				"-Wall",
				"-Wextra",
				"-g3",
				"${workspaceFolder}/main.cpp",
				"${workspaceFolder}/pdf_generator.cpp",
                "${workspaceFolder}/Crossroad.cpp",
                "${workspaceFolder}/Vehicle.cpp",
                "${workspaceFolder}/Simulation.cpp",
                "${workspaceFolder}/TrafficLight.cpp",
				"${workspaceFolder}/Record.cpp",
				"${workspaceFolder}/RecordManager.cpp",
				"-o",
				"${workspaceFolder}/output/main.exe",
				"-I",
				"${workspaceFolder}/LibPDF",
				"-L",
				"${workspaceFolder}/LibPDF",
				"-lhpdf",
                "-lbgi",
                "-lgdi32",
                "-lcomdlg32",
                "-luuid",
                "-loleaut32",
                "-lole32"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: C:/MinGW/bin/g++.exe"
		}
	]
}
