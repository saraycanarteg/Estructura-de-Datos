{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar con SFML",
            "type": "shell",
            "command": "g++",
            "args": [
                "-I", "C:/SFML-2.6.2/include",
                "-L", "C:/SFML-2.6.2/lib",
                "${file}",
                "-o", "${fileDirname}/${fileBasenameNoExtension}.exe",
                "-lsfml-graphics", "-lsfml-window", "-lsfml-system"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
